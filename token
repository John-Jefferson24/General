# Chat completion
curl -X POST https://api.example.com/ \
  -H "Content-Type: application/json" \
  -H "X-JWT-Token: YOUR_TOKEN_HERE" \
  -d '{
    "model": "mixtral",
    "messages": [{"role": "user", "content": "Hello"}]
  }'

# Embedding
curl -X POST https://api.example.com/ \
  -H "Content-Type: application/json" \
  -H "X-JWT-Token: YOUR_TOKEN_HERE" \
  -d '{
    "model": "jina",
    "input": "Hello world"
  }'
