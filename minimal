SetEnv API_KEY "your-secret-api-key-here"

# API Key Authentication check
# This checks for valid API key in the Authorization header
RewriteEngine On
RewriteCond %{HTTP:Authorization} ^Bearer\ (.+)$ [NC]
RewriteRule .* - [E=AUTH_BEARER:%1]
RewriteCond %{ENV:AUTH_BEARER} !^$ 
RewriteCond %{ENV:AUTH_BEARER} !^%{ENV:API_KEY}$ [NC]
RewriteRule .* - [F,L]
