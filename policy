apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: jupyterhub-projects-unified-policy
  namespace: 74388-confl
  labels:
    app: jupyterhub-genai
    name: jupyterhub-genai
    template: jupyterhub-genai
spec:
  podSelector:
    matchExpressions:
    - key: project
      operator: In
      values: ["reverse-dictionary", "ffeg"]  # Add new projects here
  egress:
  # Allow all traffic within the same namespace (auto-match)
  - to:
    - namespaceSelector: {}
  # Allow DNS resolution
  - to: []
    ports:
    - protocol: UDP
      port: 53
    - protocol: TCP
      port: 53
    - protocol: TCP
      port: 5353
  # Allow HTTPS only to SSO/Fed specific IP blocks
  - to:
    - ipBlock:
        cidr: 171.20.133.25/32
    - ipBlock:
        cidr: 164.91.222.209/32
    ports:
    - protocol: TCP
      port: 443
  policyTypes:
  - Egress
