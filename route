apiVersion: v1
kind: Service
metadata:
  name: neo4j
spec:
  type: NodePort
  ports:
  - name: http
    port: 7474
    targetPort: 7474
    nodePort: 32432
  - name: bolt
    port: 7687
    targetPort: 7687
    nodePort: 30807
  selector:
    app: neo4j

apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: neo4j-ui
spec:
  host:
  port:
    targetPort: http
  tls:
    termination: edge
  to:
    kind: Service
    name: neo4j

apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: neo4j-bolt
spec:
  host:
  port:
    targetPort: bolt
  tls:
    termination: passthrough
  to:
    kind: Service
    name: neo4j
    weight: 100
  wildcardPolicy: None

