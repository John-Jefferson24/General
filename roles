# Role Bindings for Snorkel Flow
# Namespace: cp-1920938

apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: snorkelflow-internal-k8s-ro-sa-cr
  namespace: cp-1920938
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: snorkelflow-internal-k8s-ro-sa-cr
subjects:
- kind: ServiceAccount
  name: snorkelflow-internal-k8s-ro-sa 
  namespace: cp-1920938

---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: snorkelflow-internal-k8s-rw-sa-cr
  namespace: cp-1920938
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: snorkelflow-internal-k8s-rw-sa-cr
subjects:
- kind: ServiceAccount
  name: snorkelflow-internal-k8s-rw-sa 
  namespace: cp-1920938

---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: jupyterhub-cr
  namespace: cp-1920938
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: jupyterhub-cr
subjects:
- kind: ServiceAccount
  name: jupyterhub-sa
  namespace: cp-1920938
