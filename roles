livenessProbe:
  httpGet:
    path: /v2/health/live
    port: 9000
  initialDelaySeconds: 10
  periodSeconds: 20
  failureThreshold: 3

readinessProbe:
  httpGet:
    path: /v2/health/ready
    port: 9000
  initialDelaySeconds: 15
  periodSeconds: 10
  failureThreshold: 3


apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: triton-frontend
spec:
  host: openai-api.example.com  # <--- This will be the Wide IP target
  path: /v2/health/ready
  to:
    kind: Service
    name: openai-frontend
  port:
    targetPort: 9000
  tls:
    termination: edge           # Use passthrough or reencrypt if using TLS end-to-end
